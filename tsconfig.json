{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "target": "es2017",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules"]
}
